<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.view.RegisterView">
   <children>
      <VBox fx:id="root" alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Text fx:id="emailTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Insert your informations">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Text>
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <VBox>
                     <children>
                        <Text fx:id="emailTxt4" strokeType="OUTSIDE" strokeWidth="0.0" text="E-mail">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Text>
                        <TextField fx:id="emailTField" promptText="Enter your e-mail">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </VBox>
                  <VBox VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <Text fx:id="emailTxt3" strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
                        <TextField fx:id="usrnameTField" promptText="What username do you want to use?">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Text fx:id="emailTxt2" strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
                        <PasswordField fx:id="pswField" promptText="What's your password?">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </PasswordField>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Text fx:id="emailTxt1" strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm your password" />
                        <PasswordField fx:id="pswField2" promptText="Confirm password">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </PasswordField>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="signUpBtn" mnemonicParsing="false" onAction="#register" text="Sign up">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Hyperlink fx:id="hyperLinkPartner" onAction="#switchToRegisterPartner" text="Want to work with us?" />
         </children>
      </VBox>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="1000.0" prefWidth="2000.0" style="-fx-background-color: #FF5C5C;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.view.RegPartnerView">
   <children>
      <VBox fx:id="root" alignment="CENTER" prefWidth="791.0" VBox.vgrow="ALWAYS">
         <children>
            <Text fx:id="emailTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Partner register form">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="32.0" />
               </font>
            </Text>
            <VBox maxHeight="240.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox>
                     <children>
                        <Text fx:id="emailTxt4" strokeType="OUTSIDE" strokeWidth="0.0" text="E-mail">
                           <VBox.margin>
                              <Insets left="15.0" />
                           </VBox.margin>
                        </Text>
                        <TextField fx:id="emailTField" promptText="Enter your e-mail">
                           <VBox.margin>
                              <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </VBox>
                  <VBox VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <Text fx:id="emailTxt3" strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
                           <VBox.margin>
                              <Insets left="15.0" />
                           </VBox.margin></Text>
                        <TextField fx:id="usrnameTField" promptText="What username do you want to use?">
                           <VBox.margin>
                              <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Text fx:id="emailTxt32" strokeType="OUTSIDE" strokeWidth="0.0" text="Partita IVA">
                           <VBox.margin>
                              <Insets left="15.0" />
                           </VBox.margin>
                        </Text>
                        <TextField fx:id="pIVATField" promptText="What is your P.IVA?">
                           <VBox.margin>
                              <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Text fx:id="emailTxt31" strokeType="OUTSIDE" strokeWidth="0.0" text="Company Name">
                           <VBox.margin>
                              <Insets left="15.0" />
                           </VBox.margin>
                        </Text>
                        <TextField fx:id="compNameTField" promptText="What is your company name?">
                           <VBox.margin>
                              <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Text fx:id="emailTxt2" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
                           <VBox.margin>
                              <Insets left="15.0" />
                           </VBox.margin></Text>
                        <PasswordField fx:id="pswField" promptText="What's your password?">
                           <VBox.margin>
                              <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </PasswordField>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Text fx:id="emailTxt1" strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm your password">
                           <VBox.margin>
                              <Insets left="15.0" />
                           </VBox.margin></Text>
                        <PasswordField fx:id="pswField2" promptText="Confirm password">
                           <VBox.margin>
                              <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </PasswordField>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="signUpBtn" mnemonicParsing="false" onAction="#register" text="Sign up">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Hyperlink fx:id="hyperLinkLogin" onAction="#switchToLogin" text="Are you already registered?" />
            <Hyperlink fx:id="hyperLinkExplorer1" onAction="#switchToExplorerRegister" text="Have not an activity?" />
         </children>
      </VBox>
   </children>
</VBox>

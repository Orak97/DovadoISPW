                              </CheckBox>
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                              <CheckBox fx:id="pref11" alignment="CENTER" mnemonicParsing="false" text="Adrenalina" textAlignment="CENTER" textFill="#212121">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <CheckBox fx:id="pref12" alignment="CENTER" mnemonicParsing="false" text="Relax" textAlignment="CENTER" textFill="#212121">

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.view.PreferenceSelectView">
   <children>
      <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Text fx:id="emailTxt" fill="#212121" strokeType="OUTSIDE" strokeWidth="0.0" text="What do you like to do?">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Text>
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <HBox fx:id="prefHBox" alignment="CENTER">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                              <CheckBox fx:id="pref1" alignment="CENTER" mnemonicParsing="false" text="Arte" textAlignment="CENTER" textFill="#212121">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <CheckBox fx:id="pref2" alignment="CENTER" mnemonicParsing="false" text="Cibo" textAlignment="CENTER" textFill="#212121">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <CheckBox fx:id="pref3" alignment="CENTER" mnemonicParsing="false" text="Musica" textAlignment="CENTER" textFill="#212121">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <CheckBox fx:id="pref4" alignment="CENTER" mnemonicParsing="false" text="Sport" textAlignment="CENTER" textFill="#212121">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <CheckBox fx:id="pref5" alignment="CENTER" mnemonicParsing="false" text="Social" textAlignment="CENTER" textFill="#212121">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </CheckBox>
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <children>
                              <CheckBox fx:id="pref6" alignment="CENTER" mnemonicParsing="false" text="Natura" textAlignment="CENTER" textFill="#212121">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <CheckBox fx:id="pref7" alignment="CENTER" mnemonicParsing="false" text="Esplorazione" textAlignment="CENTER" textFill="#212121">
                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <CheckBox fx:id="pref8" alignment="CENTER" mnemonicParsing="false" text="Ricorrenze Locali" textAlignment="CENTER" textFill="#212121">
